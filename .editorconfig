root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.{json,yml}]
indent_size = 2

[*.{env,gitignore,html}]
insert_final_newline = false

[*.{md}]
insert_final_newline = true

[/docs/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
